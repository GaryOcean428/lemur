{
  "name": "lemur",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "client",
    "functions",
    "server",
    "hosting"
  ],
  "config": {
    "vite_port": 9000,
    "dev_port": 5080,
    "emulator_ui_port": 4000
  },
  "scripts": {
    "dev": "NODE_ENV=development DEBUG=vite:* PORT=$npm_package_config_dev_port npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "dev:functions": "npm run dev -w functions",
    "dev:emulate": "concurrently -n 'emulators,server,client' -c 'yellow,green,blue' \"npm run emulators\" \"npm run dev\" \"npm run dev:client\"",
    "dev:full": "concurrently -n 'emulators,server,client' -c 'yellow,green,blue' \"npm run emulators:all\" \"npm run dev\" \"npm run dev:client\"",
    "dev:studio": "firebase emulators:start --project=lemur-86e1b --import=./dev-data --ui",
    "build": "npm run build -w client",
    "build:functions": "npm run build -w functions",
    "build:all": "npm run build && npm run build:functions",
    "build:server": "npm run build -w server",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "deploy:ci": "firebase deploy --non-interactive",
    "start": "NODE_ENV=production node functions/dist/index.js",
    "check": "npm run check:types -ws",
    "check:types": "tsc --noEmit",
    "check:functions": "npm run check:types -w functions",
    "db:push": "drizzle-kit push",
    "emulators": "firebase emulators:start",
    "emulators:all": "firebase emulators:start --import=./dev-data --export-on-exit",
    "emulators:export": "firebase emulators:export ./dev-data",
    "test": "npm run test -ws --if-present",
    "test:rules": "cd firestore && jest rules.test.js",
    "lint": "npm run lint -ws --if-present",
    "lint:firebase": "firebase ext:lint",
    "seed:dev": "NODE_ENV=development tsx scripts/seed-dev-data.ts",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@upstash/redis": "^1.34.9",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "firebase": "^11.7.1",
    "firebase-admin": "^13.3.0",
    "memorystore": "^1.6.7",
    "nanoid": "^5.1.5",
    "node-fetch": "^3.3.2",
    "openai": "^4.97.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "stripe": "^18.1.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.0",
    "zod": "^3.24.4",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.18",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.1",
    "esbuild": "^0.25.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.4",
    "typescript": "5.6.3",
    "vite": "^6.3.5"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
