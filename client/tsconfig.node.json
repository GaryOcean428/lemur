{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Fix for IDX environment */
    "rootDir": "..",
    "baseUrl": ".."
  },
  "include": [
    "../vite.config.ts"
  ],
  "files": [
    "../vite.config.ts"
  ]
}